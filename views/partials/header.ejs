<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">

    <% if (locals.loggedin) { %>
      <!-- Show this if the user is logged in -->
      <a title="Click to log out" href="/account/login">Welcome, <%- locals.accountData.account_type %></a>
      <a title="Click to log out" href="/account/logout">Logout</a>
      <% } else { %>
        <!-- Show this if the user is not logged in -->
        <a title="Click to log in" href="/account/login">My Account</a>
        <% } %>
  </div>
</header>

